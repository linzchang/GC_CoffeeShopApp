@model CoffeeShop.Models.Item

@{
    ViewBag.Title = "EditItem";
}

<h2>Edit Item</h2>

@using (Html.BeginForm("SaveItemChanges", "Database", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.TextBoxFor(model => model.ItemID, new { @class = "form-control", type = "hidden", value = @Model.ItemID })
    </div>
    <div class="form-group">
        <label class='control-label'>Item Name</label>
        @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control", type = "text", placeholder = "Enter Item Name", value = @Model.ItemName })
    </div>
    <div class="form-group">
        <label class='control-label'>Description</label>
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", type = "text", placeholder = "Enter Description", value = @Model.Description })
    </div>
    <div class="form-group">
        <label class='control-label'>Quantity</label>
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", type = "text", placeholder = "Enter Quantity", value = @Model.Quantity })
    </div>
    <div class="form-group">
        <label class='control-label'>Price</label>
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "text", placeholder = "Enter Price", value = @Model.Price })
    </div>
    <input type="submit" class="btn btn-secondary btn-lg" value="Submit"/>
}

