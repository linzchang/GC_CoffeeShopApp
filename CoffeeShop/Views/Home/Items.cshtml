
@{
    ViewBag.Title = "Items";
}

<h2 class="text-center p-3">Available Products</h2>
<br />

<div class="container">
    <div class="row form-group">
        <div class="col-sm">
            <p class="font-weight-bold">Image</p>
        </div>
        <div class="col-sm">
            <p class="font-weight-bold">Item Name</p>
        </div>
        <div class="col-sm">
            <p class="font-weight-bold">Description</p>
        </div>
        <div class="col-sm">
            <p class="font-weight-bold">Quantity</p>
        </div>
        <div class="col-sm">
            <p class="font-weight-bold">Price</p>
        </div>
        <div class="col-sm">
            <p class="font-weight-bold">Edit</p> 
        </div>
        <div class="col-sm">
            <p class="font-weight-bold">Delete</p> 
        </div>
    </div>
    @foreach (var item in ViewBag.ItemList)
    {
    <div class="row form-group">
        <div class="col-sm">
            <img src="~/Images/@(item.ItemName).jpg" class="itemImage img-thumbnail" alt="@item.ItemName Thumbnail" />
        </div>
        <div class="col-sm">
            @item.ItemName
        </div>
        <div class="col-sm">
            @item.Description
        </div>
        <div class="col-sm">
            @item.Quantity
        </div>
        <div class="col-sm">
            $@item.Price
        </div>
        <div class="col-sm">
            <a href="~/Item/EditItem?ItemID=@item.ItemID">Edit this Item</a>
        </div>
        <div class="col-sm">
            <a href="~/Item/DeleteItem?ItemID=@item.ItemID">Delete this Item</a>
        </div>
    </div>
    }

</div>

<a class="btn btn-secondary" href="~/Database/AddItem">Add a new Item to the Database</a>
