@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron jumbotron-custom text-white parallax">
    <h1>Welcome to This Tea Shop!</h1>
    <p class="lead">Tea of your dreams.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>New Customer?</h2>
        <p>Register an account with us to save your favorite orders!</p>
        <p><a href="/Form/Register" class="btn btn-info">User Registration</a></p>
    </div>
    <div id="carouselExampleControls" class="carousel slide col-md-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="~/Images/Tea.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="~/Images/green.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="~/Images/pink.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="col-md-4">
        <h2>Browse Items</h2>
        <p>We have a variety of tea and items to suit your needs!</p>
        <p><a class="btn btn-info" href="/Home/Items">View Products</a></p>
    </div>
</div>